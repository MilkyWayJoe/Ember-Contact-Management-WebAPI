@using MvcHtmlHelpers;
@{
    Layout = null;
}

@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;                
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="description" content="">
    <meta name="author" content="">

    @Styles.Render("~/content/tbs")
    <style type="text/css">

        body {
        padding-top: 60px;
        padding-bottom: 40px;
    }
        .sidebar-nav {
            padding: 9px 0;
        }

        @@media (max-width: 980px) {
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }

    </style>
    @Styles.Render("~/content/tbs-r")
    @Styles.Render("~/content/site")

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      @Scripts.Render("~/bundles/html5shiv")<script src="javascript/vendor/.js"></script>
    <![endif]-->
</head>
<body>
    <input id="antiForgeryToken" type="hidden" value="@GetAntiForgeryToken()" />
    
    <script type="text/x-handlebars">
      <div id="notification"></div>
      {{partial header}}
      {{partial content}}
    </script>

    <script type="text/x-handlebars" data-template-name="_header">
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          {{#linkTo contacts class="brand"}}Contact Management{{/linkTo}}
          <nav class="nav-collapse collapse">
            <ul class="nav">
              <li>
                {{#linkTo index}}
                  Contacts
                {{/linkTo}}
              </li>
            </ul>
            <div class="muted pull-right">
              @Html.Partial("_UserSettings")
            </div>
          </nav>
        </div>
      </div>
    </div>
    </script>

    <script type="text/x-handlebars" data-template-name="contacts/add">
    <section>
      <div>
        {{render contactForm content}}
      </div>
    </section>
    </script>

    <script type="text/x-handlebars" data-template-name="contact/edit">
    <section>
      <div>
        {{render contactForm content}}
      </div>
    </section>
    </script>

    <script type="text/x-handlebars" data-template-name="contact/sidebar">
      <br />
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Actions</li>
          <li>
            {{#linkTo contacts}}
              <i class="icon-th-list"></i> Back to list
            {{/linkTo}}
          </li>
        </ul>
      </div>
    </script>

    <script type="text/x-handlebars" data-template-name="contacts/index">
      <section>
        <div>
          <div>
            <div>
              {{view Ember.TextField valueBinding="searchWord" placeholder="Filter contacts"}} {{count}} contact(s)
            </div>
          </div>
          {{#if hasItems}}
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Avatar</th>
                <th>Known As</th>
                <th>Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each contact in filteredContent}}
                <tr>
                  <td>
                    <img {{bindAttr src="contact.pictureUrl"
                                    alt="contact.nickname"
                                    title="contact.nickname"}}
                          width="64" height="64" />
                  </td>
                  <td>
                    {{contact.nickname}}
                  </td>
                  <td>
                    {{contact.fullName}}
                  </td>
                  <td>
                    {{#linkTo contact.details contact class="btn btn-info"}}
                      Details
                    {{/linkTo}}
                    {{#linkTo contact.edit contact class="btn btn-info"}}
                      Edit
                    {{/linkTo}}
                    <a class="btn btn-danger" {{action deleteContact contact}}>
                      Delete
                    </a>
                  </td>
                </tr>
              {{else}}
                <tr>
                  <td colspan="4">
                    {{#if isSearchOn}}
                      <div>
                        <span>Could not find any results for <strong>{{searchWord}}</strong></span>
                      </div>
                    {{else}}
                      <div>
                        <span>You have no contacts. {{#linkTo contacts.add}}Add One{{/linkTo}}</span>
                      </div>
                    {{/if}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
          {{else}}
            <div>
              <span>You have no contacts. {{#linkTo contacts.add}}Add One{{/linkTo}}</span>
            </div>
          {{/if}}
        </div>
      </section>
    </script>

    <script type="text/x-handlebars" data-template-name="contact/view">
      <div class="row-fluid">
        <div class="span3">
          <img {{bindAttr src="pictureUrl"}}
                        width="150" height="150" /><br />
          <strong>{{fullName}}</strong>
        </div>
        <div class="span6">
          <div class="row-fluid">
            <div class="span3">
              <strong>First Name:</strong> 
            </div>
            <div class="span6">
              {{unbound firstName}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Middle Name:</strong> 
            </div>
            <div class="span6">
              {{unbound middleName}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Last Name:</strong> 
            </div>
            <div class="span6">
              {{unbound lastName}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Nickname:</strong> 
            </div>
            <div class="span6">
              {{unbound nickname}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Twitter:</strong> 
            </div>
            <div class="span6">
              {{unbound twitter}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Facebook:</strong> 
            </div>
            <div class="span6">
              {{unbound facebook}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Website:</strong> 
            </div>
            <div class="span6">
              {{unbound website}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Notes:</strong> 
            </div>
            <div class="span6">
              {{unbound notes}}
            </div>
          </div>
        </div>
      </div>
    </script>

    <script type="text/x-handlebars" data-template-name="contacts/sidebar">
      <br />
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Actions</li>
          {{#linkTo "contacts.add"}}
            <i class="icon-plus"></i> New Contact
          {{/linkTo}}
        </ul>
      </div>
    </script>


    <script type="text/x-handlebars" data-template-name="contactForm">
      <div class="row-fluid">
        <div class="span3">
          <img {{bindAttr src="pictureUrl"}}
                        width="150" height="150" /><br />
          Image Url: {{view Ember.TextField valueBinding="pictureUrl"}}
        </div>
        <div class="span6">
          <div class="row-fluid">
            <div class="span3">
              <strong>First Name:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextField valueBinding="firstName"}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Middle Name:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextField valueBinding="middleName"}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Last Name:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextField valueBinding="lastName"}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Nickname:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextField valueBinding="nickname"}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Twitter:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextField valueBinding="twitter"}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Facebook:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextField valueBinding="facebook"}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Website:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextField valueBinding="website"}}
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <strong>Notes:</strong> 
            </div>
            <div class="span6">
              {{view Ember.TextArea valueBinding="notes" rows="3"}}
            </div>
          </div>
        </div>
      </div>
    </script>

    <script type="text/x-handlebars" data-template-name="modal-popup">
      <div class="modal hide fade">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3>Modal header</h3>
        </div>
        <div class="modal-body">
          <p>One fine body…</p>
        </div>
        <div class="modal-footer">
          <a href="#" class="btn">Close</a>
          <a href="#" class="btn btn-primary">Save changes</a>
        </div>
      </div>
    </script>

    <script type="text/x-handlebars" data-template-name="contacts/add/sidebar">
      <br />
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Actions</li>
          <li>
            <a {{action saveContact content target="controller"}}>
              <i class="icon-ok"></i> Save
            </a>
          </li>
          <li>
            <a {{action cancel content target="controller"}}>
              <i class="icon-arrow-left"></i> Cancel
            </a>
          </li>
        </ul>
      </div>
    </script>

    <script type="text/x-handlebars" data-template-name="contacts/edit/sidebar">
      <br />
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Actions</li>
          <li>
            <a {{action saveContact target="controller"}}>
              <i class="icon-ok"></i> Update
            </a>
          </li>
          <li>
            <a {{action deleteContact target="controller"}}>
              <i class="icon-remove"></i> Delete
            </a>
          </li>
          <li>
            <a {{action cancelEdit target="controller"}}>
              <i class="icon-arrow-left"></i> Cancel
            </a>
          </li>
        </ul>
      </div>
    </script>

    <script type="text/x-handlebars" data-template-name="_content">
      <div class="container-fluid" style="margin-top: 40px;">
        <div class="row-fluid">
          <article class="span9">
            {{outlet content}}
          </article>
          <aside class="span3">
            {{outlet sidebar}}
          </aside>
        </div>
        {{partial footer}}
      </div>
    </script>

    <script type="text/x-handlebars" data-template-name="_footer">
      <footer>
        <p>&copy; Company 2013</p>
      </footer>
    </script>

    @Scripts.Render("~/bundles/basejs")
    @Scripts.Render("~/bundles/ember")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/app")
</body>
</html>
